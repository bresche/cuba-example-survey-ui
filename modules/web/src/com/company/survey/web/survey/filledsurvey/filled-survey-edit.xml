<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.survey.web.survey.filledsurvey.FilledSurveyEdit"
        datasource="filledSurveyDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.survey.web.survey.filledsurvey">
    <dsContext>
        <datasource id="filledSurveyDs"
                    class="com.company.survey.entity.survey.FilledSurvey"
                    view="filledSurvey-view">
            <collectionDatasource id="answersDs"
                                  property="answers">
                <datasource id="questionsDs" property="question">
                    <collectionDatasource id="questionsPossibleAnswersDs" property="possibleAnswers" />
                </datasource>
            </collectionDatasource>
        </datasource>
        <collectionDatasource id="possibleAnswersDs"
                              allowCommit="false"
                              class="com.company.survey.entity.reference.PossibleAnswer"
                              view="_minimal">
            <query>
                <![CDATA[select e from survey$PossibleAnswer e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="filledSurveyDs">
            <column width="250px">
                <field id="survey"/>
                <field id="filledDate"
                       editable="false"/>
                <field id="user"
                       editable="false"/>
            </column>
        </fieldGroup>
        <groupBox id="answersBox"
                  caption="msg://com.company.survey.entity.survey/FilledSurvey.answers">
            <table id="answersTable"
                   editable="true"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="question"/>
                    <column id="answer"
                            editable="true"
                            optionsDatasource="possibleAnswersDs"/>
                </columns>
                <rows datasource="answersDs"/>
                <buttonsPanel>
                    <button action="answersTable.create"/>
                    <button action="answersTable.edit"/>
                    <button action="answersTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
